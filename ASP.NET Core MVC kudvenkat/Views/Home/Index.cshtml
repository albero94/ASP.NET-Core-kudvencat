@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Details";
}

<div class="card-deck">
    @foreach(var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img  class="card-img-top imageThumbnail" src=@photoPath alt="Image" asp-append-version="true"/>
            <div class="card-footer text-center m-1">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId" class="btn btn-primary" style="width:5em">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1" style="width:5em">Edit</a>
                <a href="#" class="btn btn-danger m-1" style="width:5em">Delete</a>
            </div>
        </div>
    }
</div>