@model ResetPasswordViewModel

@{ 
    ViewBag.Title = "Reset Password";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.Email" />
    <input type="hidden" asp-for="@Model.Token" />

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Password" class="col-form-label"></label>
        <input asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword" class="col-form-label"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" />
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reset</button>
</form>