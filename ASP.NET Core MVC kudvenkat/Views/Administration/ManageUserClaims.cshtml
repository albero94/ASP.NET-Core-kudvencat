@model UserClaimsViewModel

@{
    ViewBag.Title = "Manage User Claims";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.UserId" />
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@Model.UserId">Cancel</a>
        </div>
    </div>
</form>