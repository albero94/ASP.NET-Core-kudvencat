@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>Manage User Roles</h1>
        </div>
        <div class="card-body">
            @for (int i=0; i< Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input asp-for="@Model[i].isSelected" class="form-check-input" />
                <label asp-for="@Model[i].isSelected" class="form-check-label">@Model[i].RoleName</label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-primary" asp-action="EditUser" asp-route-id="@userId">Cancel</button>
        </div>
    </div>
</form>