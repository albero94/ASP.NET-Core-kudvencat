@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>@ViewBag.Title</h1>
<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Email" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserName" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.City" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.City" class="form-control" />
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-primary" asp-action="ListUsers" asp-controller="Administration">Cancel</a>
</form>

<div class="card mt-3">
    <div class="card-header">
        User Roles
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <h5 class="card-title">@role</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary"  asp-action="ManageUserRoles" asp-route-userId="@Model.Id">Manage Roles</a>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        User Claims
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            foreach (var claim in Model.Claims)
            {
                <h5 class="card-title">@claim</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="ManageUserClaims" asp-route-userId="@Model.Id">Manage Claims</a>
    </div>
</div>


